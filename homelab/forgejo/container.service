[Unit]
Description=Forgejo Git Server
Requires=postgres-container.service
After=network.target postgres-container.service

[Service]
Type=simple
ExecStart=/etc/homelab/forgejo/podman-run.sh
ExecStop=/usr/bin/podman stop forgejo
ExecStopPost=/usr/bin/podman rm -f forgejo
Restart=always

[Install]
WantedBy=multi-user.target
