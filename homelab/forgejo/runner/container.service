[Unit]
Description=Forgejo Actions Runner
Requires=forgejo-container.service
After=network.target forgejo-container.service

[Service]
Type=simple
ExecStart=/etc/homelab/forgejo/runner/podman-run.sh
ExecStop=/usr/bin/podman stop forgejo-runner
ExecStopPost=/usr/bin/podman rm -f forgejo-runner
Restart=always

[Install]
WantedBy=multi-user.target
